<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_konusmalarpp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="kullanici adi"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_konusmalarpp"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/sonMesaj_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="son mesaj"
        app:layout_constraintStart_toEndOf="@+id/img_konusmalarpp"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"></TextView>

    <TextView
        android:id="@+id/zamanOnce_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4 saat Ã¶nce"
        app:layout_constraintBottom_toBottomOf="@+id/sonMesaj_id"
        app:layout_constraintStart_toEndOf="@+id/sonMesaj_id"
        app:layout_constraintTop_toTopOf="@+id/sonMesaj_id"
        app:layout_constraintVertical_bias="0.0"></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>